{% extends 'base.html.twig' %}

{% block title %}
	{{titre}}
{% endblock %}

{% block body %}

	{# On peut ajouter des filtres avec |    -> Ici on met le nom en majuscules #}
	<h1>
		Welcome {{nom|upper}}
	</h1>

	{% for user in users %}
		<ul>
			<li>{{user.nom}}</li>
			<li>{{user.email}}</li>
			<li>{{user.age}}</li>
		</ul>
	{% endfor %}


	<a href="{{ path('app_lucky_number') }}">Lucky Number</a>


{% endblock %}
