{% extends 'base.html.twig' %}

{% block title %}
	{{titre}}
{% endblock %}

{% block body %}

	{# On peut ajouter des filtres avec |    -> Ici on met le nom en majuscules #}
	<h1>
		Welcome
		{{nom|upper}}
	</h1>

	{# Afin d'utiliser dump dans twig il faut installer debug-bundle :
	composer require --dev symfony/debug-bundle #}
	{# {% dump(users)%} #}
	{% if users %}

		{% for user in users %}
			<ul>
				<li>
					{{user.nom}}
				</li>
				<li>
					{{user.email}}
				</li>
				<li>
					{{user.age}}
				</li>
			</ul>
		{% endfor %}

	{% else %}
		<p>
			Aucun user :'(
		</p>

	{% endif %}



{% endblock %}
